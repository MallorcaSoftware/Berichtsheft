{{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
{{ form_errors(form) }}

<div class="form-group">
    <label for="form_number" class="col-sm-2 control-label">Nachweis Nr.</label>
    <div class="col-sm-10">
        {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.number) }}
    </div>
</div>

<div class="form-group">
    <label for="form_week" class="col-sm-2 control-label">Kalenderwoche</label>
    <div class="col-sm-10">
        {{ form_widget(form.week, {'attr': {'class': 'form-control'}}) }}
