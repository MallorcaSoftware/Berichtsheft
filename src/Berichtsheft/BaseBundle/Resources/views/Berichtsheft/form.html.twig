    </div>
</div>

<div class="form-group">
    <label for="form_year" class="col-sm-2 control-label">Jahr</label>
    <div class="col-sm-10">
        {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.year) }}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        {{ form_widget(form.generate, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
</div>

